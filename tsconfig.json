{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "allowUnreachableCode": true,
    "target": "es5",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom",
      "scripthost"
    ],
    "paths": {
      "igniteui-core/*": [
        "src/ig/igniteui-core/*"
      ],
      "igniteui-charts/*": [
        "src/ig/igniteui-charts/*"
      ],
      "igniteui-grids/*": [
        "src/ig/igniteui-grids/*"
      ],
      "igniteui-gauges/*": [
        "src/ig/igniteui-gauges/*"
      ],
      "igniteui-inputs/*": [
        "src/ig/igniteui-inputs/*"
      ],
    },
    "rootDir": ".",
    "baseUrl": "./",
    "module": "esnext"
  }
}
